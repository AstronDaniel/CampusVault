<resources>
    <!-- CardView Styles -->
    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">@dimen/card_radius_medium</item>
        <item name="cardElevation">@dimen/elevation_low</item>
    </style>

    <style name="Widget.App.CardView.Glass" parent="Widget.App.CardView">
        <item name="cardBackgroundColor">#801F2937</item>
        <item name="strokeColor">#80374151</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <!-- Chip Styles -->
    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/chip_unselected</item>
        <item name="android:textColor">@color/text_secondary</item>
        <item name="chipStrokeColor">@color/border_default</item>
        <item name="chipStrokeWidth">1dp</item>
    </style>

    <style name="Widget.App.Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_unselected</item>
        <item name="android:textColor">@color/text_secondary</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/text_on_primary</item>
        <item name="cornerRadius">@dimen/card_radius_small</item>
    </style>

    <!-- TextInput Styles -->
    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/border_focus</item>
        <item name="hintTextColor">@color/accent</item>
    </style>

    <!-- BottomSheet Styles -->
    <style name="Widget.App.BottomSheet" parent="Widget.Material3.BottomSheet.Modal">
        <item name="backgroundTint">@color/card_background_alt</item>
    </style>

    <!-- Toolbar Styles -->
    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/text_primary</item>
        <item name="android:background">@color/surface</item>
    </style>
</resources>