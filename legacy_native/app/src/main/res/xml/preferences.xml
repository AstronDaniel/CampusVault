<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Appearance Section -->
    <PreferenceCategory
        app:title="Appearance"
        app:iconSpaceReserved="false">

        <ListPreference
            app:key="theme"
            app:title="Theme"
            app:summary="Choose your preferred theme"
            app:entries="@array/theme_entries"
            app:entryValues="@array/theme_values"
            app:defaultValue="system"
            app:icon="@drawable/ic_palette"
            app:iconSpaceReserved="true" />

    </PreferenceCategory>

    <!-- Downloads Section -->
    <PreferenceCategory
        app:title="Downloads"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:key="download_wifi_only"
            app:title="Download on Wi-Fi Only"
            app:summary="Only download files when connected to Wi-Fi"
            app:defaultValue="false"
            app:icon="@drawable/ic_wifi"
            app:iconSpaceReserved="true" />

        <ListPreference
            app:key="download_quality"
            app:title="Download Quality"
            app:summary="Choose preferred download quality"
            app:entries="@array/download_quality_entries"
            app:entryValues="@array/download_quality_values"
            app:defaultValue="original"
            app:icon="@drawable/ic_high_quality"
            app:iconSpaceReserved="true" />

        <Preference
            app:key="download_location"
            app:title="Download Location"
            app:summary="Downloads folder"
            app:icon="@drawable/ic_folder"
            app:iconSpaceReserved="true" />

    </PreferenceCategory>

    <!-- Notifications Section -->
    <PreferenceCategory
        app:title="Notifications"
        app:iconSpaceReserved="false">

        <SwitchPreferenceCompat
            app:key="notifications_enabled"
            app:title="Enable Notifications"
            app:summary="Receive push notifications"
            app:defaultValue="true"
            app:icon="@drawable/ic_notifications"
            app:iconSpaceReserved="true" />

        <SwitchPreferenceCompat
            app:key="new_resource_notifications"
            app:title="New Resources"
            app:summary="Notify me when new resources are uploaded in my courses"
            app:defaultValue="true"
            app:dependency="notifications_enabled"
            app:icon="@drawable/ic_new_releases"
            app:iconSpaceReserved="true" />

        <SwitchPreferenceCompat
            app:key="comment_notifications"
            app:title="Comments &amp; Mentions"
            app:summary="Notify me about comments on my resources"
            app:defaultValue="true"
            app:dependency="notifications_enabled"
            app:icon="@drawable/ic_comment"
            app:iconSpaceReserved="true" />

    </PreferenceCategory>

    <!-- Storage Section -->
    <PreferenceCategory
        app:title="Storage"
        app:iconSpaceReserved="false">

        <Preference
            app:key="storage_usage"
            app:title="Storage Usage"
            app:summary="Calculating..."
            app:icon="@drawable/ic_storage"
            app:iconSpaceReserved="true" />

        <Preference
            app:key="clear_cache"
            app:title="Clear Cache"
            app:summary="Free up space by clearing cached files"
            app:icon="@drawable/ic_delete_sweep"
            app:iconSpaceReserved="true" />

        <Preference
            app:key="clear_downloads"
            app:title="Clear Downloads"
            app:summary="Delete all downloaded resources"
            app:icon="@drawable/ic_delete"
            app:iconSpaceReserved="true" />

    </PreferenceCategory>

    <!-- About Section -->
    <PreferenceCategory
        app:title="About"
        app:iconSpaceReserved="false">

        <Preference
            app:key="check_updates"
            app:title="Check for Updates"
            app:summary="You're on the latest version"
            app:icon="@drawable/ic_update"
            app:iconSpaceReserved="true" />

        <Preference
            app:key="about"
            app:title="About CampusVault"
            app:summary="Version 1.0.0"
            app:icon="@drawable/ic_info"
            app:iconSpaceReserved="true" />

        <Preference
            app:key="help_support"
            app:title="Help &amp; Support"
            app:summary="Get help or send feedback"
            app:icon="@drawable/ic_help"
            app:iconSpaceReserved="true" />

        <Preference
            app:key="privacy_policy"
            app:title="Privacy Policy"
            app:icon="@drawable/ic_privacy"
            app:iconSpaceReserved="true" />

        <Preference
            app:key="terms_of_service"
            app:title="Terms of Service"
            app:icon="@drawable/ic_terms"
            app:iconSpaceReserved="true" />

    </PreferenceCategory>

</PreferenceScreen>
