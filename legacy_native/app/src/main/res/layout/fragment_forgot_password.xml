<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Hero icon with glass circle -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/heroCard"
            android:layout_width="96dp"
            android:layout_height="96dp"
            app:cardCornerRadius="48dp"
            app:cardBackgroundColor="#1AFFFFFF"
            app:strokeColor="#33FFFFFF"
            app:strokeWidth="1dp"
            android:elevation="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_lock_reset"
                android:tint="#22D3EE"
                android:contentDescription="Reset" />
        </com.google.android.material.card.MaterialCardView>

        <!-- Title and subtitle -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Reset your password"
            android:textColor="#E5E7EB"
            android:textSize="28sp"
            android:fontFamily="sans-serif-black"
            app:layout_constraintTop_toBottomOf="@id/heroCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/accentLine"
            android:layout_width="64dp"
            android:layout_height="4dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/accent_line_gradient_dark"
            app:layout_constraintTop_toBottomOf="@id/tvTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Enter your email and we'll send a link to reset your password."
            android:textColor="#9CA3AF"
            android:textSize="15sp"
            app:layout_constraintTop_toBottomOf="@id/accentLine"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Glass card form -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            app:cardBackgroundColor="#0E1525"
            app:cardCornerRadius="24dp"
            app:strokeColor="#1F2937"
            app:strokeWidth="1dp"
            android:elevation="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="22dp">

                <LinearLayout
                    android:id="@+id/contentForm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tilEmail"
                        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Email"
                        app:boxBackgroundColor="#111827"
                        app:boxCornerRadiusBottomEnd="16dp"
                        app:boxCornerRadiusBottomStart="16dp"
                        app:boxCornerRadiusTopEnd="16dp"
                        app:boxCornerRadiusTopStart="16dp"
                        app:boxStrokeColor="#22D3EE"
                        app:boxStrokeWidth="2dp"
                        app:errorEnabled="true"
                        app:errorTextColor="#EF4444"
                        app:hintTextColor="#9CA3AF"
                        app:startIconDrawable="@drawable/ic_email"
                        app:startIconTint="#9CA3AF">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etEmail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:padding="18dp"
                            android:textColor="#E5E7EB"
                            android:textColorHint="#9CA3AF"
                            android:textSize="16sp" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSendLink"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="18dp"
                        android:background="@drawable/gradient_button_primary_dark"
                        android:backgroundTint="@android:color/transparent"
                        android:text="Send reset link"
                        android:textAllCaps="false"
                        android:textColor="#111827"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        app:cornerRadius="16dp"
                        app:elevation="8dp" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:indeterminate="true"
                        android:indeterminateTint="#FFFFFF"
                        android:visibility="gone"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp" />

                    <TextView
                        android:id="@+id/btnBackToLogin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="12dp"
                        android:text="Back to Login"
                        android:textColor="#22D3EE"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Success content -->
                <LinearLayout
                    android:id="@+id/contentSuccess"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center_horizontal"
                    android:visibility="gone"
                    android:layout_marginTop="8dp">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/ic_check_circle"
                        android:tint="#5BE7C4"
                        android:contentDescription="Success" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Link sent!"
                        android:textColor="#E5E7EB"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Check your inbox for the reset link."
                        android:textColor="#9CA3AF"
                        android:layout_marginTop="4dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnBackToLogin2"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/gradient_button_primary_dark"
                        android:backgroundTint="@android:color/transparent"
                        android:text="Back to Login"
                        android:textAllCaps="false"
                        android:textColor="#111827"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        app:cornerRadius="16dp"
                        app:elevation="8dp" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
