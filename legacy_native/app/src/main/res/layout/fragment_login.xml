<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header image -->
        <ImageView
            android:id="@+id/spacer"
            android:layout_width="0dp"
            android:layout_height="320dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_app_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Floating Brand Logo/Icon (Optional) -->

        <!-- Content Container with Modern Card -->

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/brandCard"
            android:layout_width="88dp"
            android:layout_height="84dp"
            android:layout_marginTop="-40dp"
            android:elevation="12dp"
            app:cardBackgroundColor="#111827"
            app:cardCornerRadius="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spacer"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:contentDescription="Brand Logo"
                android:src="@drawable/ic_brand_logo"
                android:tint="#22D3EE" />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            app:cardBackgroundColor="#0E1525"
            app:cardCornerRadius="32dp"
            app:cardElevation="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/spacer"
            app:strokeWidth="1dp"
            app:strokeColor="#1F2937">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="32dp"
                android:paddingTop="56dp">

                <!-- Welcome Text with Modern Typography -->
                <TextView
                    android:id="@+id/tvWelcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-black"
                    android:letterSpacing="-0.02"
                    android:text="@string/welcome_back"
                    android:textColor="#E5E7EB"
                    android:textSize="36sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Accent Line under Welcome -->
                <View
                    android:id="@+id/accentLine"
                    android:layout_width="60dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/accent_line_gradient_dark"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvWelcome" />

                <!-- Subtitle with better contrast -->
                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:fontFamily="sans-serif"
                    android:text="Sign in to continue your journey"
                    android:textColor="#9CA3AF"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/accentLine" />

                <!-- Email Input with modern styling -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEmail"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:hint="@string/email"
                    app:boxBackgroundColor="#111827"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxStrokeColor="#22D3EE"
                    app:boxStrokeWidth="2dp"
                    app:errorEnabled="true"
                    app:errorTextColor="#EF4444"
                    app:hintTextColor="#9CA3AF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
                    app:startIconDrawable="@drawable/ic_email"
                    app:startIconTint="#9CA3AF">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:padding="18dp"
                        android:textColor="#E5E7EB"
                        android:textColorHint="#9CA3AF"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPassword"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:hint="@string/password"
                    app:boxBackgroundColor="#111827"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxStrokeColor="#22D3EE"
                    app:boxStrokeWidth="2dp"
                    app:endIconMode="password_toggle"
                    app:endIconTint="#9CA3AF"
                    app:errorEnabled="true"
                    app:errorTextColor="#EF4444"
                    app:hintTextColor="#9CA3AF"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tilEmail"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:startIconTint="#9CA3AF">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:padding="18dp"
                        android:textColor="#E5E7EB"
                        android:textColorHint="#9CA3AF"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Forgot Password with modern styling -->
                <TextView
                    android:id="@+id/tvForgotPassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="sans-serif-bold"
                    android:padding="12dp"
                    android:text="@string/forgot_password"
                    android:textColor="#22D3EE"
                    android:textSize="15sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tilPassword" />

                <!-- Login Button with Gradient -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnLogin"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/gradient_button_primary_dark"
                    android:backgroundTint="@android:color/transparent"
                    android:fontFamily="sans-serif-black"
                    android:letterSpacing="0.02"
                    android:text="@string/login"
                    android:textAllCaps="false"
                    android:textColor="#111827"
                    android:textSize="17sp"
                    app:cornerRadius="16dp"
                    app:elevation="8dp"
                    app:icon="@drawable/ic_arrow_forward"
                    app:iconGravity="textEnd"
                    app:iconTint="#111827"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvForgotPassword" />

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:indeterminateTint="#FFFFFF"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="@id/btnLogin"
                    app:layout_constraintEnd_toEndOf="@id/btnLogin"
                    app:layout_constraintStart_toStartOf="@id/btnLogin"
                    app:layout_constraintTop_toTopOf="@id/btnLogin" />

                <!-- Divider with text -->
                <View
                    android:id="@+id/dividerLeft"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="16dp"
                    android:background="#1F2937"
                    app:layout_constraintEnd_toStartOf="@id/tvDivider"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/btnLogin" />

                <TextView
                    android:id="@+id/tvDivider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:text="or"
                    android:textColor="#9CA3AF"
                    android:textSize="13sp"
                    app:layout_constraintBottom_toBottomOf="@id/dividerLeft"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@id/dividerLeft" />

                <View
                    android:id="@+id/dividerRight"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:background="#1F2937"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvDivider"
                    app:layout_constraintTop_toTopOf="@id/dividerLeft" />

                <!-- Sign Up Text with modern card style -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="32dp"
                    app:cardBackgroundColor="#0B1220"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#1F2937"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dividerLeft">

                    <TextView
                        android:id="@+id/tvSignUp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:padding="18dp"
                        android:text="Don't have account? Sign up"
                        android:textColor="#9CA3AF"
                        android:textSize="15sp" />

                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>