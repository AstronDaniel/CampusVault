<?xml version="1.0" encoding="utf-8"?>
<ScrollView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header image restored -->
        <ImageView
            android:id="@+id/spacer"
            android:layout_width="0dp"
            android:layout_height="320dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_app_logo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Floating Brand Logo/Icon -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/brandCard"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="-40dp"
            android:elevation="12dp"
            app:cardBackgroundColor="#111827"
            app:cardCornerRadius="24dp"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/spacer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_brand_logo"
                android:tint="#22D3EE"
                android:contentDescription="Brand Logo" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Content Container with Modern Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-20dp"
            android:layout_marginStart="0dp"
            android:layout_marginEnd="0dp"
            app:cardBackgroundColor="#0E1525"
            app:cardCornerRadius="32dp"
            app:cardElevation="12dp"
            app:strokeWidth="1dp"
            app:strokeColor="#1F2937"
            app:layout_constraintTop_toBottomOf="@id/spacer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="32dp"
                android:paddingTop="56dp">

                <!-- Title with Modern Typography -->
                <TextView
                    android:id="@+id/tvTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/create_account"
                    android:textSize="36sp"
                    android:fontFamily="sans-serif-black"
                    android:letterSpacing="-0.02"
                    android:textColor="#E5E7EB"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Accent Line -->
                <View
                    android:id="@+id/accentLine"
                    android:layout_width="60dp"
                    android:layout_height="4dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/accent_line_gradient_dark"
                    app:layout_constraintTop_toBottomOf="@id/tvTitle"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Subtitle -->
                <TextView
                    android:id="@+id/tvSubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Start your journey with us"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:textColor="#9CA3AF"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/accentLine"
                    app:layout_constraintStart_toStartOf="parent" />

                <!-- Name Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/username"
                    android:layout_marginTop="40dp"
                    app:hintTextColor="#9CA3AF"
                    app:boxStrokeColor="#22D3EE"
                    app:boxStrokeWidth="2dp"
                    app:boxBackgroundColor="#111827"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:errorEnabled="true"
                    app:errorTextColor="#EF4444"
                    app:startIconDrawable="@drawable/ic_person"
                    app:startIconTint="#9CA3AF"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:hint="@string/username"
                        android:textColor="#E5E7EB"
                        android:textColorHint="#9CA3AF"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:padding="18dp"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Email Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/email"
                    android:layout_marginTop="18dp"
                    app:hintTextColor="#9CA3AF"
                    app:boxStrokeColor="#22D3EE"
                    app:boxStrokeWidth="2dp"
                    app:boxBackgroundColor="#111827"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:errorEnabled="true"
                    app:errorTextColor="#EF4444"
                    app:startIconDrawable="@drawable/ic_email"
                    app:startIconTint="#9CA3AF"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    app:layout_constraintTop_toBottomOf="@id/tilName"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:hint="@string/email"
                        android:textColor="#E5E7EB"
                        android:textColorHint="#9CA3AF"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:padding="18dp"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Faculty Spinner -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilFaculty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Faculty"
                    android:layout_marginTop="18dp"
                    app:hintTextColor="#9CA3AF"
                    app:boxStrokeColor="#22D3EE"
                    app:boxStrokeWidth="2dp"
                    app:boxBackgroundColor="#111827"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:errorEnabled="true"
                    app:errorTextColor="#EF4444"
                    app:startIconDrawable="@drawable/ic_school"
                    app:startIconTint="#9CA3AF"
                    app:endIconMode="dropdown_menu"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    app:layout_constraintTop_toBottomOf="@id/tilEmail"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerFaculty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:hint="Select faculty"
                        android:popupBackground="@drawable/dropdown_bg_dark"
                        android:textColor="#E5E7EB"
                        android:textColorHint="#9CA3AF"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:padding="18dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Program Spinner -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilProgram"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="Program"
                    android:layout_marginTop="18dp"
                    app:hintTextColor="#9CA3AF"
                    app:boxStrokeColor="#22D3EE"
                    app:boxStrokeWidth="2dp"
                    app:boxBackgroundColor="#111827"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:errorEnabled="true"
                    app:errorTextColor="#EF4444"
                    app:startIconDrawable="@drawable/ic_menu_book"
                    app:startIconTint="#9CA3AF"
                    app:endIconMode="dropdown_menu"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    app:layout_constraintTop_toBottomOf="@id/tilFaculty"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <AutoCompleteTextView
                        android:id="@+id/spinnerProgram"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none"
                        android:hint="Select program"
                        android:popupBackground="@drawable/dropdown_bg_dark"
                        android:enabled="false"
                        android:alpha="0.6"
                        android:textColor="#E5E7EB"
                        android:textColorHint="#9CA3AF"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:padding="18dp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Password Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/password"
                    android:layout_marginTop="18dp"
                    app:hintTextColor="#9CA3AF"
                    app:boxStrokeColor="#22D3EE"
                    app:boxStrokeWidth="2dp"
                    app:boxBackgroundColor="#111827"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:endIconMode="password_toggle"
                    app:endIconTint="#9CA3AF"
                    app:errorEnabled="true"
                    app:errorTextColor="#EF4444"
                    app:startIconDrawable="@drawable/ic_lock"
                    app:startIconTint="#9CA3AF"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    app:layout_constraintTop_toBottomOf="@id/tilProgram"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="#E5E7EB"
                        android:textColorHint="#9CA3AF"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:padding="18dp"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Confirm Password Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tilConfirmPassword"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/confirm_password"
                    android:layout_marginTop="18dp"
                    app:hintTextColor="#9CA3AF"
                    app:boxStrokeColor="#22D3EE"
                    app:boxStrokeWidth="2dp"
                    app:boxBackgroundColor="#111827"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:endIconMode="password_toggle"
                    app:endIconTint="#9CA3AF"
                    app:errorEnabled="true"
                    app:errorTextColor="#EF4444"
                    app:startIconDrawable="@drawable/ic_lock_open"
                    app:startIconTint="#9CA3AF"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
                    app:layout_constraintTop_toBottomOf="@id/tilPassword"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etConfirmPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:textColor="#E5E7EB"
                        android:textColorHint="#9CA3AF"
                        android:textSize="16sp"
                        android:fontFamily="sans-serif-medium"
                        android:padding="18dp"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Register Button with Gradient -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnRegister"
                    android:layout_width="0dp"
                    android:layout_height="64dp"
                    android:text="@string/register"
                    android:textSize="17sp"
                    android:fontFamily="sans-serif-black"
                    android:textColor="#111827"
                    android:textAllCaps="false"
                    android:letterSpacing="0.02"
                    android:backgroundTint="@android:color/transparent"
                    android:background="@drawable/gradient_button_primary_dark"
                    android:layout_marginTop="32dp"
                    app:cornerRadius="16dp"
                    app:elevation="8dp"
                    app:iconGravity="textEnd"
                    app:icon="@drawable/ic_arrow_forward"
                    app:iconTint="#111827"
                    app:layout_constraintTop_toBottomOf="@id/tilConfirmPassword"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:indeterminateTint="#FFFFFF"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="@id/btnRegister"
                    app:layout_constraintBottom_toBottomOf="@id/btnRegister"
                    app:layout_constraintStart_toStartOf="@id/btnRegister"
                    app:layout_constraintEnd_toEndOf="@id/btnRegister" />

                <!-- Divider with text -->
                <View
                    android:id="@+id/dividerLeft"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="32dp"
                    android:layout_marginEnd="16dp"
                    android:background="#1F2937"
                    app:layout_constraintTop_toBottomOf="@id/btnRegister"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tvDivider" />

                <TextView
                    android:id="@+id/tvDivider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="or"
                    android:textColor="#9CA3AF"
                    android:textSize="13sp"
                    android:fontFamily="sans-serif-medium"
                    app:layout_constraintTop_toTopOf="@id/dividerLeft"
                    app:layout_constraintBottom_toBottomOf="@id/dividerLeft"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <View
                    android:id="@+id/dividerRight"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:background="#1F2937"
                    app:layout_constraintTop_toTopOf="@id/dividerLeft"
                    app:layout_constraintStart_toEndOf="@id/tvDivider"
                    app:layout_constraintEnd_toEndOf="parent" />

                <!-- Sign In Text with modern card style -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:layout_marginBottom="32dp"
                    app:cardBackgroundColor="#0B1220"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="0dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="#1F2937"
                    app:layout_constraintTop_toBottomOf="@id/dividerLeft"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                        android:id="@+id/tvSignIn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Already have an account? Sign in"
                        android:textColor="#9CA3AF"
                        android:textSize="15sp"
                        android:fontFamily="sans-serif-medium"
                        android:gravity="center"
                        android:clickable="true"
                        android:focusable="true"
                        android:background="?attr/selectableItemBackground"
                        android:padding="18dp" />

                </com.google.android.material.card.MaterialCardView>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>