<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:orientation="vertical">

    <!-- Colorful Section Banner -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardBanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="2dp"
        app:strokeWidth="0dp">

        <LinearLayout
            android:id="@+id/bannerBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <!-- Year/Semester Icon -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardIcon"
                android:layout_width="44dp"
                android:layout_height="44dp"
                app:cardBackgroundColor="#33FFFFFF"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                app:strokeWidth="0dp">

                <TextView
                    android:id="@+id/tvYearNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    tools:text="1" />
            </com.google.android.material.card.MaterialCardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvSectionTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="Year 1 - Semester 1" />

                <TextView
                    android:id="@+id/tvCourseCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.85"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    tools:text="8 Course Units" />
            </LinearLayout>

            <!-- Expand/Collapse Icon -->
            <ImageView
                android:id="@+id/ivExpandIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:rotation="0"
                android:src="@drawable/ic_expand_more"
                app:tint="@android:color/white" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Course Units Grid (Collapsible) -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvCourseUnits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:nestedScrollingEnabled="false"
        tools:itemCount="4"
        tools:listitem="@layout/item_course_unit" />

</LinearLayout>
