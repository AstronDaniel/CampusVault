<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#0B1120">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Greeting header -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#111827"
            app:cardCornerRadius="24dp"
            app:strokeColor="#1F2937"
            app:strokeWidth="1dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tvGreeting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Welcome back, Student"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:fontFamily="sans-serif-black"
                    android:letterSpacing="-0.01" />

                <TextView
                    android:id="@+id/tvTagline"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discover and share campus resources"
                    android:textColor="#9CA3AF"
                    android:textSize="15sp"
                    android:fontFamily="sans-serif"
                    android:layout_marginTop="6dp" />

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- User Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="#111827"
            app:cardCornerRadius="20dp"
            app:strokeColor="#1F2937"
            app:strokeWidth="1dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_school"
                        android:tint="#22D3EE"
                        android:padding="8dp"
                        android:background="@drawable/circle_button_background"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/tvProgram"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Computer Science"
                            android:textColor="#E5E7EB"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/tvFaculty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Faculty of Science"
                            android:textColor="#9CA3AF"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Year selector -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Year"
            android:textStyle="bold"
            android:textColor="#E5E7EB"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="6dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipYear1"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year 1" />
            <com.google.android.material.chip.Chip
                android:id="@+id/chipYear2"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year 2"
                android:checked="true" />
            <com.google.android.material.chip.Chip
                android:id="@+id/chipYear3"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year 3" />
            <com.google.android.material.chip.Chip
                android:id="@+id/chipYear4"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year 4" />
        </com.google.android.material.chip.ChipGroup>

        <!-- Semester selector -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Semester"
            android:textStyle="bold"
            android:textColor="#E5E7EB"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="6dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupSemester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSem1"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semester 1"
                android:checked="true" />
            <com.google.android.material.chip.Chip
                android:id="@+id/chipSem2"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semester 2" />
        </com.google.android.material.chip.ChipGroup>

        <!-- Course units grid -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Units"
            android:textStyle="bold"
            android:textColor="#E5E7EB"
            android:textSize="18sp"
            android:fontFamily="sans-serif-black"
            android:layout_marginBottom="12dp" />

        <!-- Skeleton Loading -->
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerCourseUnits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <include layout="@layout/skeleton_course_units_grid" />

        </com.facebook.shimmer.ShimmerFrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCourseUnits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:visibility="gone" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
