<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/background_screen">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header with Gradient Background -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/home_header_gradient"
            android:paddingHorizontal="20dp"
            android:paddingTop="20dp"
            android:paddingBottom="24dp">

            <!-- Top Row: Profile and Search -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="16dp">

                <!-- Profile Container with Username Tooltip -->
                <LinearLayout
                    android:id="@+id/profileContainer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginEnd="16dp"
                    android:clickable="true"
                    android:focusable="true">
                    
                    <!-- Profile Image with Glow -->
                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        
                        <!-- Glow Effect -->
                        <View
                            android:layout_width="56dp"
                            android:layout_height="56dp"
                            android:background="@drawable/circle_button_background"
                            android:backgroundTint="@color/brand_primary"
                            android:alpha="0.25"
                            android:layout_gravity="center"/>
                        
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/ivUserProfile"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:scaleType="centerCrop"
                            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                            android:background="@color/surface_card"
                            android:layout_gravity="center"
                            android:clickable="false"
                            android:focusable="false"/>
                    </FrameLayout>
                    
                    <!-- Username Label -->
                    <TextView
                        android:id="@+id/tvUsernameLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hi, Student"
                        android:textColor="@color/text_secondary"
                        android:textSize="11sp"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginTop="4dp"
                        android:maxWidth="70dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:gravity="center"/>
                </LinearLayout>

                <!-- Search with Autocomplete -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/searchInputLayout"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:boxBackgroundColor="@android:color/transparent"
                    app:boxStrokeWidth="0dp"
                    app:boxStrokeWidthFocused="0dp"
                    app:hintEnabled="false"
                    app:startIconDrawable="@drawable/ic_search"
                    app:startIconTint="@color/text_tertiary"
                    app:endIconMode="clear_text"
                    app:endIconTint="@color/text_tertiary">

                    <AutoCompleteTextView
                        android:id="@+id/searchAutoComplete"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:background="@drawable/search_background"
                        android:hint="Search course units..."
                        android:textColorHint="@color/text_tertiary"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:paddingStart="44dp"
                        android:paddingEnd="16dp"
                        android:inputType="text"
                        android:imeOptions="actionSearch"
                        android:dropDownAnchor="@id/searchInputLayout"
                        android:dropDownVerticalOffset="8dp"
                        android:completionThreshold="1"
                        android:popupBackground="@drawable/search_dropdown_bg" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- Main Content with Padding -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:paddingTop="0dp">

        <!-- User Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/surface_card"
            app:cardCornerRadius="20dp"
            app:strokeColor="@color/border_color"
            app:strokeWidth="1dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_school"
                        android:tint="@color/brand_primary"
                        android:padding="8dp"
                        android:background="@drawable/circle_button_background"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp">

                        <TextView
                            android:id="@+id/tvProgram"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Computer Science"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:fontFamily="sans-serif-medium" />

                        <TextView
                            android:id="@+id/tvFaculty"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Faculty of Science"
                            android:textColor="@color/text_secondary"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Year selector -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Year"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="6dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupYear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipYear1"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year 1" />
            <com.google.android.material.chip.Chip
                android:id="@+id/chipYear2"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year 2"
                android:checked="true" />
            <com.google.android.material.chip.Chip
                android:id="@+id/chipYear3"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year 3" />
            <com.google.android.material.chip.Chip
                android:id="@+id/chipYear4"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year 4" />
        </com.google.android.material.chip.ChipGroup>

        <!-- Semester selector -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Semester"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:textSize="16sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="6dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chipGroupSemester"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:singleSelection="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipSem1"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semester 1"
                android:checked="true" />
            <com.google.android.material.chip.Chip
                android:id="@+id/chipSem2"
                style="@style/Widget.MaterialComponents.Chip.Choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Semester 2" />
        </com.google.android.material.chip.ChipGroup>

        <!-- Course units grid -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Course Units"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:textSize="18sp"
            android:fontFamily="sans-serif-black"
            android:layout_marginBottom="12dp" />

        <!-- Skeleton Loading -->
        <com.facebook.shimmer.ShimmerFrameLayout
            android:id="@+id/shimmerCourseUnits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <include layout="@layout/skeleton_course_units_grid" />

        </com.facebook.shimmer.ShimmerFrameLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCourseUnits"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false"
            android:overScrollMode="never" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="12dp"
            android:visibility="gone" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
